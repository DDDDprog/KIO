{
  "name": "kio-language-support",
  "displayName": "KIO Language Support",
  "description": "Syntax highlighting and basic language support for KIO (.kio, .ko)",
  "version": "0.1.0",
  "publisher": "kio-project",
  "author": "Dipanjan Dhar",
  "license": "GPL-3.0-only",
  "icon": "images/logo.jpg",
  "main": "out/extension.js",
  "activationEvents": [
    "onLanguage:kio",
    "onCommand:kio.hello"
  ],
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": ["Programming Languages"],
  "contributes": {
    "languages": [
      {
        "id": "kio",
        "aliases": ["KIO", "kio"],
        "extensions": [".kio", ".ko"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/logo.jpg",
          "dark": "./images/logo.jpg"
        }
      }
    ],
    "commands": [
      {
        "command": "kio.hello",
        "title": "KIO: Hello from Extension"
      },
      {
        "command": "kio.runFile",
        "title": "KIO: Run File"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == kio",
          "command": "kio.runFile",
          "group": "navigation@1"
        }
      ],
      "commandPalette": [
        { "command": "kio.runFile", "when": "resourceLangId == kio" }
      ]
    },
    "keybindings": [
      {
        "command": "kio.runFile",
        "key": "ctrl+alt+r",
        "when": "editorTextFocus && editorLangId == kio"
      }
    ],
    "snippets": [
      {
        "language": "kio",
        "path": "./snippets/kio.json"
      }
    ],
    "grammars": [
      {
        "language": "kio",
        "scopeName": "source.kio",
        "path": "./syntaxes/kio.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "kio-icons",
        "label": "KIO File Icons",
        "path": "./fileicons/kio-icon-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
}
