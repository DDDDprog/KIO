{
  "name": "axeon-language",
  "displayName": "Axeon Language Support",
  "description": "VS Code extension for Axeon programming language - syntax highlighting, IntelliSense, and more",
  "version": "1.0.1",
  "icon": "icon.jpg",
  "main": "./out/extension.js",
  "publisher": "axeon",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:axeon",
    "workspaceContains:**/*.axe",
    "workspaceContains:**/*.ko"
  ],
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "contributes": {
    "debuggers": [
      {
        "type": "axeon",
        "label": "Axeon Debugger",
        "languages": ["axeon"],
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the Axeon program to debug"
              },
              "args": {
                "type": "array",
                "description": "Command line arguments"
              },
              "stopOnEntry": {
                "type": "boolean",
                "default": true,
                "description": "Stop on entry"
              }
            }
          }
        }
      }
    ],
    "languages": [
      {
        "id": "axeon",
        "aliases": [
          "Axeon",
          "axeon"
        ],
        "extensions": [
          ".axe",
          ".ko"
        ],
        "filenamePatterns": [
          "*.axe",
          "*.ko"
        ],
        "icon": {
          "light": "icon.jpg",
          "dark": "icon.jpg"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "axeon",
        "scopeName": "source.axeon",
        "path": "./syntaxes/axeon.tm.json"
      }
    ],
    "iconThemes": [
      {
        "id": "axeon-icons",
        "label": "Axeon Icons",
        "path": "./icons/axeon-icon-theme.json"
      }
    ],
    "themes": [
      {
        "label": "Axeon Monokai",
        "uiTheme": "vs-dark",
        "path": "./themes/axeon-monokai.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Axeon Language",
      "properties": {
        "axeon.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Axeon language support"
        },
        "axeon.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "axeon.enableDebug": {
          "type": "boolean",
          "default": true,
          "description": "Enable debugging support"
        },
        "axeon.enableRepl": {
          "type": "boolean",
          "default": true,
          "description": "Enable in-editor REPL"
        },
        "axeon.autoFormat": {
          "type": "boolean",
          "default": true,
          "description": "Auto-format code on save"
        }
      }
    },
    "snippets": [
      {
        "language": "axeon",
        "path": "./snippets/axeon.json"
      }
    ],
    "keybindings": [
      {
        "command": "axeon.runFile",
        "key": "F5",
        "when": "editorLangId == axeon"
      },
      {
        "command": "axeon.startRepl",
        "key": "Alt+Shift+R",
        "when": "editorLangId == axeon"
      },
      {
        "command": "axeon.formatDocument",
        "key": "Shift+Alt+F",
        "when": "editorLangId == axeon"
      },
      {
        "command": "axeon.renameSymbol",
        "key": "F2",
        "when": "editorLangId == axeon"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.3.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
