{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Axeon",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#builtins"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#decorators"
    },
    {
      "include": "#types"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.axeon",
          "match": "//.*$"
        },
        {
          "name": "comment.block.axeon",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.documentation.axeon",
          "match": "///.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.axeon",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "string.escape.axeon",
              "match": "\\\\."
            },
            {
              "name": "string.interpolation.axeon",
              "match": "\\$\\{[^}]+\\}"
            },
            {
              "name": "string.variable.axeon",
              "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        },
        {
          "name": "string.quoted.single.axeon",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "string.escape.axeon",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.template.axeon",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "string.escape.axeon",
              "match": "\\\\."
            },
            {
              "name": "string.interpolation.axeon",
              "match": "\\$\\{[^}]+\\}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.axeon",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.axeon",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.axeon",
          "match": "\\b0[oO][0-7]+\\b"
        },
        {
          "name": "constant.numeric.axeon",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.axeon",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.axeon",
          "match": "\\b(if|elif|else|then|end|for|while|do|break|continue|return|match|case|switch)\\b"
        },
        {
          "name": "keyword.import.axeon",
          "match": "\\b(import|export|module|as|from|use)\\b"
        },
        {
          "name": "keyword.other.axeon",
          "match": "\\b(fn|async|await|yield|throw|return)\\b"
        },
        {
          "name": "storage.type.axeon",
          "match": "\\b(class|struct|enum|pub|priv|static|const|let|var|mut|type|interface|trait|impl|extends|implements)\\b"
        },
        {
          "name": "keyword.exception.axeon",
          "match": "\\b(try|catch|throw|panic|assert|finally)\\b"
        },
        {
          "name": "keyword.operator.word.axeon",
          "match": "\\b(in|is|not|and|or|as|where|of)\\b"
        },
        {
          "name": "constant.language.axeon",
          "match": "\\b(true|false|nil|self|super|this|new|delete)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.axeon",
          "match": "(\\.\\.\\.|\\.\\.|=>|->|<=|>=|==|!=|[+\\-*/%=<>!&|^~?:])"
        },
        {
          "name": "punctuation.axeon",
          "match": "([,;\\.\\(\\)_{}\\[\\]])"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.axeon",
          "match": "\\b(print|println|input|type|len|range|map|filter|reduce|zip|open|read|write|close|to_string|to_int|to_float|to_bool|abs|min|max|pow|sqrt|floor|ceil|round|sin|cos|tan|asin|acos|atan|log|log10|exp|rand|seed|time|sleep|exit|panic|assert|http_get|http_post|http_put|http_delete|json_parse|json_stringify|sha256|aes_encrypt|aes_decrypt|save|load|trace|debug|format|join|split|trim|upper|lower|replace|contains|startswith|endswith|index_of|char_at|substring|to_upper|to_lower|reverse|sort|unique|flatten|flat_map|for_each|any|all|none|sum|avg|product|count|first|last|take|drop|skip|take_while|drop_while|partition|group_by|into_iter|collect|clone|copy|ref|move)\\b(?=\\s*\\()"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.axeon",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.axeon",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?!\\s*\\()"
        },
        {
          "name": "variable.language.axeon",
          "match": "\\b(self|super|this)\\b"
        }
      ]
    },
    "decorators": {
      "patterns": [
        {
          "name": "meta.annotation.axeon",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "entity.name.type.axeon",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
        },
        {
          "name": "storage.type.primitive.axeon",
          "match": "\\b(i8|i16|i32|i64|i128|u8|u16|u32|u64|u128|f32|f64|bool|str|string|int|float|void|any|type)\\b"
        }
      ]
    }
  },
  "scopeName": "source.axeon"
}
