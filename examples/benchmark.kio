// KIO Performance Benchmark
// Objective: Perform 1,000,000 iterations of arithmetic and a conditional.

let start = sys "time";
let i = 0;
let result = 0;

while (i < 1000000) {
    result = result + i * 2;
    if (result > 1000000) {
        result = result / 2;
    }
    i = i + 1;
}

let end = sys "time";
print "--- KIO Benchmark Results ---";
print "Iterations: 1,000,000";
print "Total Time: " + (end - start) + "ms";
print "Final Value: " + result;
