// Simple Benchmark - Loop Sum
print "=== KIO Simple Benchmark ===";

fn bench() {
    let start = sys "time";
    let sum = 0;
    let i = 0;

    let total = 1000000;
    while (i < total) {
       sum = sum + i;
       i = i + 1;
    }

    let end = sys "time";
    print "Sum: " + sum;
    print "Time: " + (end - start) + " ms";
}

bench();
